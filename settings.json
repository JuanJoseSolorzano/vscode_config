{
    //"vim.disableExtension": true, // Disable Vim extension. Uncomment this line to disable the Vim extension when opening VS Code.
    "telemetry.telemetryLevel": "off",
    "security.workspace.trust.untrustedFiles": "open",
    // Editor settings.
    "editor.minimap.autohide": true,
    "editor.fontSize": 16,
    "editor.accessibilitySupport": "off",
    "editor.fontFamily": "Lilex Nerd Font",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.minVisible": 5,
    "explorer.confirmPasteNative": false,
    "editor.wordWrap": "off",
    "editor.formatOnSave": false,
    "editor.tabSize": 4,
    "files.autoSave": "afterDelay",
    // Theme settings.
    "window.commandCenter": true,
    "window.menuBarVisibility": "compact",
    "workbench.layoutControl.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.sideBar.location": "right",
    "workbench.colorCustomizations": {
        "terminal.background": "#1f1f1f",
        "terminal.foreground": "#14da3f",
        "statusBar.background": "#1f1f1f",
        "statusBar.noFolderBackground": "#1f1f1f",
        "statusBar.debuggingBackground": "#2ebb12",
        "statusBar.foreground": "#a0d622"
    },
    // Testing some settings (not sure if they work).
    "workbench.editorAssociations": {
        "*.copilotmd": "vscode.markdown.preview.editor",
        "*.xml": "workbench.editorinputs.searchEditorInput",
        "*.pdf": "default",
        "*.exe": "default"
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.empty.hint": "hidden",
    // Python settings.
    "python.defaultInterpreterPath": "C:\\LegacyApp\\Python39\\python.exe",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.experiments.enabled": false,
    "python.analysis.completeFunctionParens": true,
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.shellIntegration.enabled": true,
    "python.analysis.aiCodeActions": {
        "generateDocstring": true
    },
    "jupyter.debugJustMyCode": false,
    "files.associations": {
        "*.py": "python"
    },
    "autoDocstring.includeName": true,
    "autoDocstring.customTemplatePath": "D:\\p_ta3\\docstrings_template\\custom_template.txt",
    "notebook.outline.showCodeCells": true,
